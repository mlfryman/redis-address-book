extends ../shared/template
block content
  .container
    #banner.page-header
      .row
        .col-xs-12
          h2#header New Address
      .row
        .col-xs-3
          form(role='form', method='post', action='/addresses')
            .form-group
              label(for='name') Name
              input.form-control#name(type='text', name='name', autofocus=true)
            .form-group
              label(for='email') Email
              input.form-control#email(type='email', name='email')
            .form-group
              label(for='twitter') Twitter
              input.form-control#twitter(type='text', name='twitter')
            button.btn.btn-success(type='submit') Add Address
        .col-xs-9

block scripts

